pipeline {
    agent any

    environment {
        APP_NAME           = 'apps-go-cloud'
        DOCKER_IMAGE       = 'auliaanrhm/apps-go-cloud'
        DOCKER_TAG         = 'latest'
        DOCKER_CREDENTIALS = 'dockerhub-credentials'
        COMPOSE_PROJECT_NAME = 'appsgo_jenkins'
    }

    options { skipDefaultCheckout(true) }

    stages {

        stage('Checkout') {
            steps {
                echo '📥 Checkout repository dari GitHub'
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo '🐳 Membangun Docker image aplikasi'
                bat 'docker build -t %DOCKER_IMAGE%:%DOCKER_TAG% .'
            }
        }

        stage('Push to Docker Hub') {
            steps {
                echo '📤 Mengunggah image ke Docker Hub'
                withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS}", usernameVariable: 'USR', passwordVariable: 'PWD')]) {
                    bat '''
                    docker login -u %USR% -p %PWD%
                    docker push %DOCKER_IMAGE%:%DOCKER_TAG%
                    '''
                }
            }
        }

        stage('Run Docker Compose') {
            steps {
                echo '🚀 Menjalankan docker compose'
                bat '''
                docker compose down --remove-orphans --volumes || ver >NUL
                docker rm -f mysql_db phpmyadmin laravel_app 2>NUL || ver >NUL
                docker compose up -d --build
                docker ps
                '''
            }
        }
    }

    post {
        always {
            echo '✅ Pipeline selesai tanpa smo
